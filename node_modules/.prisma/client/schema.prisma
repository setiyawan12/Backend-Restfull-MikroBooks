generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["groupBy"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model books {
  id_books    Int       @id @default(autoincrement())
  title       String?
  publisher   String?
  author      String?
  isbn        Int?
  pages       Int?
  description String?
  cover_books String?
  users_id    Int?
  category_id Int?
  user        Int?
  category    category? @relation(fields: [category_id], references: [id_category])
  users       users?    @relation(fields: [users_id], references: [id_users])
  rating      rating[]
  discuss     discuss[]
  borrow      borrow[]
}

model borrow {
  id_borrow  Int       @id @default(autoincrement())
  date_start DateTime? @db.Date
  date_end   DateTime? @db.Date
  id_books   Int?
  id_users   Int?
  books      books?    @relation(fields: [id_books], references: [id_books])
  users      users?     @relation(fields: [id_users], references: [id_users])
}

model category {
  id_category    Int     @id @default(autoincrement())
  category_name  String?
  category_cover String?
  books          books[]
}

model discuss {
  id_discuss Int  @id @default(autoincrement())
  diskusi    String?
  books_id   Int?
  id_users   Int?
  books books? @relation(fields:[books_id],references:[id_books])
  users users? @relation(fields: [id_users],references:[id_users])
}

model users {
  id_users           Int            @id @default(autoincrement())
  username           String?
  email              String?
  password           String?
  books              String[]
  books_booksTousers books[]
  detail_users       detail_users[]
  disscus            discuss[]
  borrow             borrow[]
}

model rating {
  id_rating Int    @id @default(autoincrement())
  id_books  Int?
  rating    Float?
  id_users  Int?
  books     books? @relation(fields: [id_books], references: [id_books])
}
model detail_users {
  id         Int       @id @default(autoincrement())
  users_id   Int?
  nik        Int?
  users_foto String?
  address    String?
  tlp        Int?
  gender     String?
  birth_date DateTime? @db.Date
  users      users?    @relation(fields: [users_id], references: [id_users])
}
